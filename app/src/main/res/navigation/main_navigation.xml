<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/discovery_nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.youkydesign.recipeapp.feature.discovery.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment">
            <argument
                android:name="rId"
                android:defaultValue="rId" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.youkydesign.recipeapp.feature.discovery.ui.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="rId"
            app:argType="string" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="https://www.youkydesign.com/recipe/{rId}" />
        <action
            android:id="@+id/action_detailFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <include-dynamic
        android:id="@+id/favorite_nav_graph"
        app:graphResName="favorite_nav_graph"
        app:moduleName="favorite"
        app:graphPackage="com.youkydesign.recipeapp.favorite"
        />
</navigation>